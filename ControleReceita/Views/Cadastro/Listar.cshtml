@model IEnumerable<ProjetoWEB19NET.Dominio.ModelViews.ReceitaView>

@{
    ViewData["Title"] = "Todas as receitas.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Todas as receitas cadastradas.</h2>

<p>
    <a asp-area="" asp-controller="Cadastro" asp-action="Index">Adicionar Novo</a>
</p>
<table class="table table-striped table-condensed table-hover">
    <thead class="table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModoPreparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredientes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModoPreparo)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.Foto)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.Tags)
                </td>
                <td class="col-md-4">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |                    
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
